#这里定义各个模块的目录

_NETWORK_PROTOCOL_COMM_PATH  =  $(_NETWORK_PROTOCOL_PATH)/common
_NETWORK_PROTOCOL_CDCP_PATH  =  $(_NETWORK_PROTOCOL_PATH)/cdcp
_NETWORK_PROTOCOL_ECP_PATH  =  $(_NETWORK_PROTOCOL_PATH)/ecp
_NETWORK_PROTOCOL_EVBENTRY_PATH  =  $(_NETWORK_PROTOCOL_PATH)/evb_entry
_NETWORK_PROTOCOL_EVBTLV_PATH  =  $(_NETWORK_PROTOCOL_PATH)/evbtlv
_NETWORK_PROTOCOL_LLDP_PATH  =  $(_NETWORK_PROTOCOL_PATH)/lldp
_NETWORK_PROTOCOL_VDP_PATH  =  $(_NETWORK_PROTOCOL_PATH)/vdp
_NETWORK_PROTOCOL_EVBPORT_PATH  =  $(_NETWORK_PROTOCOL_PATH)/evbport
_NETWORK_PROTOCOL_EVBCFG_PATH  =  $(_NETWORK_PROTOCOL_PATH)/evb_cfg

#这里指定模块的Makefile
_NETWORK_PROTOCOL_COMM_MAKEFILE  =  $(_NETWORK_PROTOCOL_COMM_PATH)/makefile
_NETWORK_PROTOCOL_CDCP_MAKEFILE  =  $(_NETWORK_PROTOCOL_CDCP_PATH)/makefile
_NETWORK_PROTOCOL_ECP_MAKEFILE  =  $(_NETWORK_PROTOCOL_ECP_PATH)/makefile
_NETWORK_PROTOCOL_EVBENTRY_MAKEFILE  =  $(_NETWORK_PROTOCOL_EVBENTRY_PATH)/makefile
_NETWORK_PROTOCOL_EVBTLV_MAKEFILE  =  $(_NETWORK_PROTOCOL_EVBTLV_PATH)/makefile
_NETWORK_PROTOCOL_LLDP_MAKEFILE  =  $(_NETWORK_PROTOCOL_LLDP_PATH)/makefile
_NETWORK_PROTOCOL_VDP_MAKEFILE  =  $(_NETWORK_PROTOCOL_VDP_PATH)/makefile
_NETWORK_PROTOCOL_EVBPORT_MAKEFILE  =  $(_NETWORK_PROTOCOL_EVBPORT_PATH)/makefile
_NETWORK_PROTOCOL_EVBCFG_MAKEFILE  =  $(_NETWORK_PROTOCOL_EVBCFG_PATH)/makefile


#这里添加模块的include目录
_NETWORK_INCLUDE_PATH += $(addprefix -I,$(_NETWORK_PROTOCOL_COMM_PATH)/include)  \
		            $(addprefix -I,$(_NETWORK_PROTOCOL_CDCP_PATH)/include) \
		            $(addprefix -I,$(_NETWORK_PROTOCOL_ECP_PATH)/include) \
		            $(addprefix -I,$(_NETWORK_PROTOCOL_EVBENTRY_PATH)/include) \
		            $(addprefix -I,$(_NETWORK_PROTOCOL_EVBTLV_PATH)/include) \
		            $(addprefix -I,$(_NETWORK_PROTOCOL_LLDP_PATH)/include) \
		            $(addprefix -I,$(_NETWORK_PROTOCOL_VDP_PATH)/include) \
		            $(addprefix -I,$(_NETWORK_PROTOCOL_EVBPORT_PATH)/include)\
		            $(addprefix -I,$(_NETWORK_PROTOCOL_EVBCFG_PATH)/include)	

_NETWORK_MACRO_DEF += -D_EVB_TECS
export CPPFLAGS += $(_NETWORK_INCLUDE_PATH) $(_NETWORK_MACRO_DEF)
export DEPCPPFLAGS += $(_NETWORK_INCLUDE_PATH) $(_NETWORK_MACRO_DEF)

